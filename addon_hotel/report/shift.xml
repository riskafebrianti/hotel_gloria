<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="report_room_booking">
        <t t-call="web.html_container" style="border:1px solid">
        <!-- <div t-attf-class="o_company_#{company_id}_layout header" t-att-style="report_header_style" > -->
            <t t-call="web.external_layout">
            
                <div class="float-left" style="border:0px solid; margin-top:-45px;width:50%;font-size:30px;">
                    <div class="details">
                            <b><span style="color:black; font-size:35px;"><t t-esc="docs.company_id.name"/></span></b>
                                <br></br>
                            <t t-if="docs.company_id.street">
                                <span  t-esc="docs.company_id.street" style="font-size:30px;"/>
                            </t>
                                <br></br>
                            <t t-if="docs.company_id">
                                <span t-esc="docs.company_id.city" style="font-size:30px;"/> 
                            </t>   
                                <br></br>
                            <t t-if="docs.company_id.mobile" style="font-size:30px;">
                                Telepon / Whatsapp. <span t-esc="docs.company_id.mobile" style="font-size:30px;"/> / Telp. <span t-esc="docs.company_id.phone" style="font-size:30px;"/> 
                            </t>   
                                <br></br>  
                    </div>

                </div>     
                    <div class="float-right" style="border:0px solid; margin-top:-120px; margin-left:2000px;">
                        <img t-if="docs.company_id.logo" t-att-src="image_data_uri(docs.company_id.logo)" alt="Logo" style="height:150px;"/>
                    </div>
                   
                <div style="line-height: 3.1em; border-bottom-style: double; border: 1px solid black;"></div>

            <br/>
            
                <div class="page">
                <span style="font-size:40px;">Booking Report</span>
                    <br/>
                    <span  style="font-size:25px;">Periode :<t t-esc="docs.periode().strftime('%d %B %Y')"/> s/d <t t-esc="docs.periodee().strftime('%d %B %Y')"/> </span>
                    <br/>
                    <br/><table class="table">
                        <thead>
                            <tr>
                                <th  style="font-size:30px">No.</th>
                                <th  style="font-size:30px">Kode Booking</th>
                                <th  style="font-size:30px">Room</th>
                                <th  style="font-size:30px">Date</th>
                                <th  style="font-size:30px">Check-In</th>
                                <th  style="font-size:30px">Check-Out</th>
                                <th  style="font-size:30px">Customer</th>
                                <th  style="font-size:30px">Status</th>
                                <th  style="font-size:30px">Harga</th>
                                <th  style="font-size:30px">Total</th>
                                <th  style="font-size:30px">Piutang</th>
                                <th  style="font-size:30px">Bayar</th>
                                <th  style="font-size:30px">Dibuat Oleh</th>
                            </tr>
                        </thead>
                        <t t-set="i" t-value="0"/>
                        <t t-foreach="docs.filtered(lambda pay: pay.state not in('draft','cancel')).room_line_ids" t-as="line">
                            <t t-set="i" t-value="i+1"/>
                            <!-- <t t-set="tes" t-value="docs.paid()"/> -->
                            
                            <tr>
                                <td style="font-size:25px">
                                    <t t-esc="i"/>
                                </td>
                                <td style="font-size:25px">
                                    <t t-esc="line.booking_id.name" />
                                </td>
                                <td style="font-size:25px">
                                    <t t-esc="line.room_id.name"/>
                                </td>
                               
                                <td style="font-size:25px">
                                    <t t-esc="line.booking_id.date_order.strftime('%d/%m/%Y')"/>
                                </td>
                               <td style="font-size:25px">
                                    <t t-esc="line.checkin_date.strftime('%d/%m/%Y')"/>
                                </td>
                                <td style="font-size:25px">
                                    <t t-esc="line.checkout_date.strftime('%d/%m/%Y')"/>
                                </td>
              
                                 <td style="font-size:25px">
                                    <t t-esc="line.booking_id.partner_id.name"/>
                                </td>
                                <td style="font-size:25px">
                                    <t t-esc="line.state"/>
                                </td> 
                                <td style="font-size:25px">
                                    <span>Rp. <t t-esc="'{0:,.2f}'.format(int(line.room_id.list_price))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}'/></span>
                                </td>
                                <td style="font-size:25px">
                                    <!-- <t t-esc="line.price_unit"/> -->
                                    <span>Rp. <t t-esc="'{0:,.2f}'.format(int(line.booking_id.amount_total))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}'/></span>
                                </td> 
                                <td style="font-size:25px">
                                    <span>Rp. <t t-esc="'{0:,.2f}'.format(int(line.booking_id.amount()))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}'/></span>
                                    <!-- <t t-esc="line.booking_id.amount().amount_residual"/> -->
                                </td> 
<!-- len(d) >= 1 -->
                                <t t-if="line.booking_id.paymnt()">
                                    <td style="font-size:25px">
                                        <!-- <span>Rp. <t t-esc="'{0:,.2f}'.format(int(line.booking_id.paymnt().amount_total for line in docs))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}'/></span> -->
                                        <!-- <t t-esc="sum(line.amount_total for line in docs.paymnt())"/> -->
                                        <span>Rp. <t t-esc="'{0:,.2f}'.format(int(line.booking_id.paymnt()))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}'/></span>

                                    </td> 
                                </t>   
                                <t t-if="not line.booking_id.paymnt()">
                                    <td style="font-size:25px">
                                        <span> - </span>
                                    </td> 
                                </t>   
                          
                                 <td style="font-size:25px">
                                    <t t-esc="line.booking_id.message_follower_ids[0].name"/>
                                </td> 
                            </tr>
                        </t>
                       <tr>
                            <td colspan="8" align="right"  style= "font-size:30px;">Total</td>
                            <td align="center" style= "font-size:25px; color:black; font-weight: bold;"><span>Rp. </span><span t-esc="'{0:,.2f}'.format(int(sum(line.room_id.list_price for line in docs.filtered(lambda pay: pay.state not in('draft','cancel')).room_line_ids)))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}' /></td>
                            <td align="center" style= "font-size:25px; color:black; font-weight: bold;"><span>Rp. </span><span t-esc="'{0:,.2f}'.format(int(sum(line.booking_id.amount_total for line in docs.filtered(lambda pay: pay.state not in('draft','cancel')).room_line_ids)))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}' /></td>
                            <td align="center" style= "font-size:25px; color:black; font-weight: bold;"><span>Rp. </span><span t-esc="'{0:,.2f}'.format(int(sum(line.booking_id.amount() for line in docs.filtered(lambda pay: pay.state not in('draft','cancel')).room_line_ids)))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}' /></td>
                            <td align="center" style= "font-size:25px; color:black; font-weight: bold;"><span>Rp. </span><span t-esc="'{0:,.2f}'.format(int(sum(line.booking_id.paymnttotal() for line in docs.filtered(lambda pay: pay.state not in('draft','cancel')).room_line_ids)))" t-field-options='{"widget": "monetary", "display_currency": x.currency_id}' /></td>
                            <td></td>
                       </tr>
                       
                       <strong>
                       
                      </strong>
                    </table>
                    <!-- <div class="row" name="total">
                        <div class="col-xs-4 pull-left">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td style="font-size:25px"><strong>Total:</strong></td>
                                    <t t-esc="sum(l.price_total for l in customer_details.order_line) " />
                                </tr>
                            </table>
                        </div>
                    </div> -->

                </div>
                <div class="ttd" style="border:0px solid; float: left; color: black; width:35% ; font-size:25px;"> 
                   Samarinda, <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d %B %Y %H:%M')"/><br/><br/>
                    <!-- <p>Dibuat Oleh:</p><br/><br/><br/><br/><br/><br/><br/> -->
                        <!-- <strong><hr width="100%" style="border: 1px solid black; color: black !important;"/></strong> -->
                    <!-- <center><p style="margin:top;font-size:25px;"><u> <span t-esc="user.name"/></u><br/> Front Office</p></center> -->
                </div>

                <div class="ttd" style="border:0px solid; float: right; color: black; width:30% ;font-size:25px;"> 
                    <center> 
                     <br/><br/>
                        <p>Dibuat Oleh:</p><br/><br/><br/><br/><br/><br/><br/>
                            <!-- <strong><hr width="100%" style="border: 1px solid black; color: black !important;"/></strong> -->
                        <p style="margin:top;font-size:25px;"><u><span t-esc="user.name"/></u><br/> Front Office</p>
                    </center>
                </div>
            </t>
        </t>
    </template>

</odoo>
